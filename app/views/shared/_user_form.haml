= form_for user, url: url do |f|
  - if user.errors.any?
    .error.notification
      %ul
        - user.errors.full_messages.each do |message|
          %li #{message}.
  - if user.persisted?
    .field
      = f.label :username
      = f.text_field :username
  .field
    = f.label :email
    - if user.persisted?
      = user.email
    - else
      = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit
