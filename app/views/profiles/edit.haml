%h1 Profile
= form_for @user, url: profile_path do |f|
  - if @user.errors.any?
    .error.notification
      %ul
        - @user.errors.full_messages.each do |message|
          %li #{message}.
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :email
    = user.email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit
